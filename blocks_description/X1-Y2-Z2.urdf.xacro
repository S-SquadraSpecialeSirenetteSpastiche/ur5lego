<?xml version="1.0"?>
<xacro:include filename="$(find ur5lego)/blocks_description/material.xacro" />

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="$(arg block_name)">
  <xacro:arg name="block_name" default="block"/>
  
  <link name="block">
    <visual>
      <geometry>
        <mesh filename="$(find ur5lego)/blocks_description/meshes/X1-Y2-Z2.dae"/>
      </geometry>
      <material name="random_color"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="$(find ur5lego)/blocks_description/meshes/X1-Y2-Z2.dae"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>
</robot>